@model IEnumerable<Project.Models.Endereco>

<section class="p-5">

    <h2>endereco de preferencia</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>IdUsuario</th>
                <th>CEP</th>
                <th>Estado</th>
                <th>Cidade</th>
                <th>Bairro</th>
                <th>Rua</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var endereco in Model)
            {
                <tr>
                    <td>@endereco.Id</td>
                    <td>@endereco.IdUsuario</td>
                    <td>@endereco.CEP</td>
                    <td>@endereco.Estado</td>
                    <td>@endereco.Cidade</td>
                    <td>@endereco.Bairro</td>
                    <td>@endereco.Rua</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="form-group pt-3">
        <a asp-controller="Endereco" asp-action="Criar" class="btn btn-warning">Voltar</a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary bg-green">Home</a>
        <a asp-controller="Endereco" asp-action="Atualizar" class="btn " style="background-color: aquamarine;">Atualizar</a>
    </div>

</section>