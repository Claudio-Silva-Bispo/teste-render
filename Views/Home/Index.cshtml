@{
    ViewData["Title"] = "Index";
}

<section class="text-center min-vh-80 justify-content-center" style="color: #D2E9C4; align-items: center; justify-content: center; justify-items: center;>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h5 class="display-4" style="color: #3C4748; margin-top: 5rem;">Receba sugestões personalizadas para você</h5>
                
                <!-- Saudação personalizada para meus clientes -->
                <h6 class="mb-4">
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {

                        var nomeUsuario = User.Claims.FirstOrDefault(c => c.Type == "FullName")?.Value;
                        @* Exibe o nome do usuário se ele estiver logado *@
                        <span style="color: blue;">Bem-vindo, @User.Identity.Name!</span>
                        
                        
                    }
                    else
                    {
                        @* Exibe "Visitante" se o usuário não estiver logado *@
                        <span style="color: blue;">Bem-vindo, Visitante! Faça seu login para acessar suas informações personalizadas.</span>
                    
                    }
                </h6>

            <div class="w-80" style="height: 80vh">
                <img src="~/assets/Problema/imagem4.png" alt="Imagem de fundo para área de cadastro cliente" class="img-fluid" style="width: 100%; height: 100%; object-fit: cover;">
            </div>
            </div>
        </div>
    </div>
</section>