@model IEnumerable<Project.Models.DiasPreferencia>

<section class="p-5">

    <h2>endereco de preferencia</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>IdUsuario</th>
                <th>Dias</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var dia in Model)
            {
                <tr>
                    <td>@dia.Id</td>
                    <td>@dia.IdUsuario</td>
                    <td>@dia.DiasSemana</td>

                    <td>
                        <!-- FormulÃ¡rio para excluir diretamente -->
                       <form method="post" asp-controller="DiasPreferencia" asp-action="Excluir" asp-route-idDia="@dia.Id" onsubmit="return confirm('Tem certeza que deseja excluir?');">
                            <button type="submit" class="btn btn-danger" style="width: 100%;">Excluir</button>
                        </form>

                    </td>
                    
                </tr>
            }
        </tbody>

    </table>

    <!-- Exibir alerta de sucesso, se houver -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success mt-3">
                @TempData["SuccessMessage"]
            </div>
        }

    <div class="form-group pt-3">
        <a asp-controller="DiasPreferencia" asp-action="Criar" class="btn btn-warning">Voltar</a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary bg-green">Home</a>
        <a asp-controller="DiasPreferencia" asp-action="Atualizar" class="btn " style="background-color: aquamarine;">Atualizar</a>
    </div>

</section>